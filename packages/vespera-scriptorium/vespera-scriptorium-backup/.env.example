# PyPI Configuration
# Get your token from: https://pypi.org/manage/account/token/
PYPI_API_TOKEN=pypi-your-token-here

# Optional: TestPyPI token for testing releases
# Get test token from: https://test.pypi.org/manage/account/token/
PYPI_TEST_TOKEN=

# Repository URLs (usually don't need to change these)
PYPI_REPOSITORY_URL=https://upload.pypi.org/legacy/
TEST_PYPI_REPOSITORY_URL=https://test.pypi.org/legacy/

# Release Options
AUTO_GIT_TAG=true              # Automatically create git tags
RUN_TESTS_BEFORE_UPLOAD=true   # Run test suite before uploading
CLEAN_BUILD_ARTIFACTS=true      # Clean dist/ and build/ after upload
VERBOSE_OUTPUT=false            # Show detailed output